<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TableRow>

        <com.b2r.main.ui.view.HintImageView
            android:id="@+id/task_short_1"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/uc"
            app:hint = "@string/uc_hint"
            />

        <com.b2r.main.ui.view.HintImageView
            android:id="@+id/task_short_2"
            android:layout_width="18dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_height="18dp"
            android:src="@drawable/coop"
            app:hint = "@string/coop_hint"/>

        <com.b2r.main.ui.view.HintImageView
            android:id="@+id/task_short_3"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/mini_map"
            app:hint="@string/minimap_hint"/>
    </TableRow>

</TableLayout>