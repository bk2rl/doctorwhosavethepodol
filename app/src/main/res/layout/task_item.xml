<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    card:elevation="4dp">

    <RelativeLayout
        android:id="@+id/task_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="0.85">

        <ImageView
            android:id="@+id/hint"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignBottom="@+id/task_item_secondary_text"
            android:layout_alignTop="@+id/task_item_head_text"
            android:adjustViewBounds="false"
            android:scaleType="fitXY"
            android:src="@drawable/map" />

        <ImageView
            android:id="@+id/map_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignBottom="@+id/task_item_secondary_text"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/task_item_head_text"
            android:layout_marginRight="5dp"
            android:adjustViewBounds="false"
            android:src="@drawable/map" />

        <TextView
            android:id="@+id/task_item_head_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_toLeftOf="@id/map_button"
            android:layout_toRightOf="@id/hint"
            android:text="Task title"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/task_item_secondary_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/task_item_head_text"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_toLeftOf="@id/map_button"
            android:layout_toRightOf="@id/hint"
            android:text="This is short task about field"
            android:textAppearance="?android:attr/textAppearanceListItemSmall"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/task_long_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hint"
            android:layout_gravity="center_horizontal"
            android:padding="10dp"
            android:text="Task description"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/white" />

    </RelativeLayout>
</android.support.v7.widget.CardView>